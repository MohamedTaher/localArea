    <ImageButton
        android:id="@+id/sendNewMessageButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitCenter"
        android:background="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/paper_plan"
        />

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/sendNewMessageButton"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"></ListView>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageButton"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/singleuser"
        android:scaleType="fitCenter"
        android:background="@android:color/background_light" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/multiuser"
        android:scaleType="fitCenter"
        android:background="@android:color/background_light" />
</RelativeLayout>
