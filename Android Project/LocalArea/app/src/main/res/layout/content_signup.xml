<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_signup" tools:context="com.example.taher.localarea.Signup">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:text="Username"
        android:textColor="#404040"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/username_signup"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/id"
        android:layout_alignBottom="@+id/id"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/id"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_signup"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/username_signup"
        android:text="E-mail"
        android:textColor="#404040"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/username_signup"
        android:layout_alignRight="@+id/username_signup"
        android:ems="10"
        android:hint="E-mail Address"
        android:inputType="textPersonName"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_signup"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/username_signup"
        android:text="Password"
        android:textColor="#404040"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/email_signup"
        android:layout_alignStart="@+id/email_signup">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Fill your information"
        android:textColor="#404040"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/supmitButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:textColor="#404040"
        android:textStyle="bold"
        android:layout_below="@+id/repassword_signup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <EditText
        android:id="@+id/repassword_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Re-password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_below="@+id/password_signup"
        android:layout_alignStart="@+id/password_signup"
        android:layout_alignEnd="@+id/password_signup" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Password"
        android:layout_marginTop="10dp"
        android:textColor="#404040"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/repassword_signup"
        android:layout_toStartOf="@+id/username_signup" />


</RelativeLayout>
